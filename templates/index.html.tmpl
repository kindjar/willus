<html>
  <head>
    <title>Weather for {{.Latitude}}, {{.Longitude}}</title>
    <style type="text/css">
      {{template "stylesheet.css.tmpl"}}
    </style>
  </head>
  <body>
    <h1>
      Weather forecast for {{.Latitude}}, {{.Longitude}} as of
      {{FloatAsDateTime .Currently.Time "long"}}
    </h1>
    <h2 class="summary">{{.Currently.Summary}}, {{.Currently.Temperature}}&deg;</h2>
    <div class="details">
      <div class="icon">{{.Currently.Icon}}</div>
    </div>
    <h2>Minutely</h2>
    <div class="minutely">
      {{range .Minutely.Data}}
        <div class="minute">
          <h3 class="time">{{FloatAsDateTime .Time "shortTime"}}</h3>
          {{template "_datapoint.html.tmpl" .}}
        </div>
      {{end}}
    </div>
    <h2>Hourly</h2>
    <div class="hourly">
      {{range .Hourly.Data}}
        <div class="hour">
          <h3 class="time">{{FloatAsDateTime .Time "shortTime"}}</h3>
          {{template "_datapoint.html.tmpl" .}}
        </div>
      {{end}}
    </div>
    <h2>Daily</h2>
    <div class="daily">
      {{range .Daily.Data}}
        <div class="day">
          <h3 class="time">{{FloatAsDateTime .Time "shortDate"}}</h3>
          {{template "_datapoint.html.tmpl" .}}
        </div>
      {{end}}
    </div>
    {{if .Alerts}}
      <h2>Alerts</h2>
      <div class="alerts">
        {{range .Alerts}}
          {{template "_alert.html.tmpl" .}}
        {{end}}
      </div>
    {{end}}
  </body>
</html>
